@model ENTIDADES.DESPACHO

@{
    ViewData["Title"] = "Despacho";
}

<h1>DESPACHO</h1>

<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-action="Create">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary">
                <a asp-action="Reporte">Generar Reporte</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PLACA" class="control-label"></label>
                <select asp-for="PLACA" class="form-control" asp-items="ViewBag.PLACA"></select>
            </div>
            <div class="form-group">
                <label asp-for="ID_BOMBA" class="control-label"></label>
                <select asp-for="ID_BOMBA" class="form-control" asp-items="ViewBag.ID_BOMBA"></select>
            </div>
            <div class="form-group">
                <label asp-for="ID_TIPO_COMBUSTIBLE" class="control-label"></label>
                <select asp-for="ID_TIPO_COMBUSTIBLE" class="form-control" asp-items="ViewBag.ID_TIPO_COMBUSTIBLE"></select>
            </div>
            <div class="form-group">
                <label asp-for="CANTIDAD_GALONES" class="control-label"></label>
                <input asp-for="CANTIDAD_GALONES" class="form-control" />
                <span asp-validation-for="CANTIDAD_GALONES" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PRECIO_GALON" class="control-label"></label>
                <input asp-for="PRECIO_GALON" class="form-control" />
                <span asp-validation-for="PRECIO_GALON" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FECHA_DESPACHO" class="control-label"></label>
                <input asp-for="FECHA_DESPACHO" class="form-control" />
                <span asp-validation-for="FECHA_DESPACHO" class="text-danger"></span>
            </div>
     
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
