@model IEnumerable<ENTIDADES.VEHICULO>

@{
    ViewData["Title"] = "Mantenimiento de Vehiculos";
}

<h1>Mantenimiento de Vechiculos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create" role="button"> <i class="fas fa-plus"></i> Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PLACA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ANIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MODELO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ESTADO)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PLACA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ANIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MODELO)
            </td>
            <td>
                @if (item.ESTADO == "A")
                {
                    <i class="fas fa-circle" style="color:green" title="Activo"></i>
                }
                else
                {
                    <i class="fas fa-circle" style="color:red" title="Inactivo"></i>
                }
            </td>
            <td>


                <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.PLACA"> <i class="fas fa-edit"></i> Editar</a>
                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.PLACA"> <i class="fas fa-info"></i> Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
